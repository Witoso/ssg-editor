{
  "compilerOptions": {
    "target": "ESNext",            // Target the latest ECMAScript features
    "module": "ESNext",            // Use the latest module system
    "moduleResolution": "node",    // Use Node.js-style module resolution
    "outDir": "./dist",            // Output directory for compiled files
    "rootDir": "..",            // Root directory for your source code
    "types": ["node", "express"],
    "esModuleInterop": true

  },
  "include": ["src/**/*.ts", "../types"],     // Include all TypeScript files in src folder
  "exclude": ["src/**/*.test.ts"]
}
